{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!.next",
			"!build",
			"!dist",
			"!**/*.css"
		]
	},
	"vcs": { "useIgnoreFile": true },
	"formatter": { "enabled": true, "formatWithErrors": true, "indentWidth": 2 },
	"linter": { "enabled": true },
	"javascript": { "formatter": { "semicolons": "asNeeded" } }
}
